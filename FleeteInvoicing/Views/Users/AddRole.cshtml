@Styles.Render("~/MaterialDesign/css/pulse.css")
@Styles.Render("~/MaterialDesign/plugins/sweetalert/sweetalert.css")
@Styles.Render("~/MaterialDesign/plugins/bootstrap-select/css/bootstrap-select.css")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")


@model FleeteInvoicing.ViewModels.UserView
@{
    ViewBag.Title = "AddRole";
}

<style type="text/css">
    #layoutFleet {
        margin-left: 0%;
    }
</style>

<div align="left">
    <div id="vmProvider" class="container-fluid">
        <div class="block-header">
            <h2><b>Agregar rol al usuario : @Model.UserName</b></h2>
            <h3>@ViewBag.Error</h3>
        </div>
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="panel-body text-right">
                      @using (Html.BeginForm("AddRole", "Users", new { userID = Model.UserID }, FormMethod.Post))
                      {
                        @Html.AntiForgeryToken()

                        <div class="col-sm-11">

                            <div class="form-group">
                                @Html.LabelFor(model => model.Role.RoleID, "RoleID", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("RoleID", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Role.RoleID, "", new { @class = "text-danger" })
                                </div>
                                 <div class="modal-footer">
                                    @Html.ActionLink("Return to User", "Roles", new { userID = Model.UserID }, new { @class = "btn btn-info" })
                                    <input type="submit" value="Add Role" class="btn btn-success" />
                                 </div>
                            </div>
                        </div>
                      }
                    </div>
                   
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    @Scripts.Render("~/MaterialDesign/plugins/jquery-datatable/jquery.dataTables.pagination.js")
    @Scripts.Render("~/MaterialDesign/plugins/jquery-datatable/skin/bootstrap/js/dataTables.bootstrap.js")
    @Scripts.Render("~/MaterialDesign/plugins/sweetalert/sweetalert.min.js")
    @Scripts.Render("~/MaterialDesign/js/pages/ui/dialogs.js")
    @Scripts.Render("~/MaterialDesign/js/pages/ui/tooltips-popovers.js")
    @Scripts.Render("~/MaterialDesign/js/pages/ui/modals.js")
    @Scripts.Render("~/Scripts/Views/Catalogs/customers.js")

}
