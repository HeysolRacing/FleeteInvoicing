@model IEnumerable<FleeteInvoicing.Models.CFD_EXPANDED_ADDRESS1>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<link href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" rel="stylesheet" />
<p>
    @Html.ActionLink("Create New", "Create")
</p>


<table id="customers" class="display" cellspacing="0" width="100%">
  <thead>
    <tr>
        <th>
            CORP CODE
        </th>
        <th>
           CNTC_NO
        </th>
        <th>
            CUSTOMER
        </th>
        <th>
            RFC
        </th>
        <th>
            ADDRESS 1 
        </th>
        <th>
            ADDRESS 2
        </th>
        <th>
            ADDRESS 3
        </th>
        <th>
            CITY
        </th>
        <th>
            STATE 
        </th>
        <th>
            ZIP
        </th>
        <th>
            PAYMENT METHOD
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CFDI_USAGE)
        </th>
        <th></th>
        </tr>
  </thead>
  <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CORP_CD)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CNTC_NO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CUSTNAME)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RFC)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ADDRESS1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ADDRESS2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ADDRESS3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CITY)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.STATE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ZIP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PAYMENT_METHOD_TYPE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CFDI_USAGE)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.CUSTID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.CUSTID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.CUSTID })
                </td>
            </tr>
        }
   </tbody>
 </table>

@section Scripts{
  
@Scripts.Render("~/MaterialDesign/plugins/jquery-datatable/jquery.dataTables.pagination.js")
@Scripts.Render("~/MaterialDesign/plugins/jquery-datatable/skin/bootstrap/js/dataTables.bootstrap.js")

<script>
    $(function () {
        $('#customers').DataTable();
    });
</script>
}




